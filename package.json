{
  "name": "libox",
  "version": "0.4.0",
  "description": "A CLI tool to create library.",
  "bin": {
    "libox": "dist/index.js"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prettier": "prettier --write '**/*.{md,json}'",
    "commit": "git-cz",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "cli",
    "scaffolding",
    "template",
    "startkit"
  ],
  "author": "heynext <heynext.xyz@gmail.com>",
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^4.0.1",
    "download": "^7.1.0",
    "ejs": "^3.0.1",
    "fs-extra": "^8.1.0",
    "inquirer": "^7.0.0",
    "lodash.get": "^4.4.2",
    "yaml": "^1.8.2"
  },
  "devDependencies": {
    "@commitlint/core": "^8.3.5",
    "@types/download": "^6.2.4",
    "@types/ejs": "^3.0.1",
    "@types/fs-extra": "^8.1.0",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^25.1.4",
    "@types/lodash.get": "^4.4.6",
    "@types/yaml": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "commitizen": "^4.0.3",
    "commitlint-config-gitmoji": "^1.0.1",
    "cz-emoji": "^1.2.1",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^9.5.0",
    "ora": "^4.0.3",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "license": "MIT",
  "homepage": "https://github.com/heynext/libox",
  "repository": {
    "type": "git",
    "url": "https://github.com/heynext/libox.git"
  },
  "bugs": {
    "url": "https://github.com/heynext/libox/issues"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.0.0"
  }
}
